<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:meta="http://namespaces.zope.org/meta"
    xmlns:psj="http://namespaces.zope.org/psj">

  <!--
    This directive can be used in `site.zcml` or other
    ZCML files parsed during startup. Typical use:

    <configure xmlns="http://namespaces.zope.org/zope"
               xmlns:psj="http://namespaces.zope.org/psj">
      <psj:external-vocab path="/foo/bar" name="psj.content.Institutes" />
    </configure>

    This registers a vocab config under name ``psj.content.Institutes``.
  -->
  <meta:directive
      namespace="http://namespaces.zope.org/psj"
      name="external-vocab"
      schema=".zcml.IExternalVocabConfig"
      handler=".zcml.external_vocab_conf"
      />

  <meta:directive
      namespace="http://namespaces.zope.org/psj"
      name="redis-store-config"
      schema=".zcml.IRedisStoreConfig"
      handler=".zcml.redis_store_conf"
      />

    <configure xmlns="http://namespaces.zope.org/zope"
               xmlns:psj="http://namespaces.zope.org/psj">
      <psj:external-vocab path="/srv/plone/pp2-buildout/zinstance/src/psj.content/etc/sample-institutes.csv" name="psj.content.Institutes" />
    </configure>

    <configure xmlns="http://namespaces.zope.org/zope"
               xmlns:psj="http://namespaces.zope.org/psj">
      <psj:external-vocab path="/srv/plone/pp2-buildout/zinstance/src/psj.content/etc/sample-licenses.csv" name="psj.content.Licenses" />
    </configure>

    <configure xmlns="http://namespaces.zope.org/zope"
               xmlns:psj="http://namespaces.zope.org/psj">
      <psj:external-vocab path="/srv/plone/pp2-buildout/zinstance/src/psj.content/etc/sample-subjectgroups.csv" name="psj.content.Subjectgroup" />
    </configure>

    <configure xmlns="http://namespaces.zope.org/zope"
               xmlns:psj="http://namespaces.zope.org/psj">
      <psj:external-vocab path="/srv/plone/pp2-buildout/zinstance/src/psj.content/etc/sample-ddc-zeit.csv" name="psj.content.DDCZeit" />
    </configure>

    <configure xmlns="http://namespaces.zope.org/zope"
               xmlns:psj="http://namespaces.zope.org/psj">
      <psj:external-vocab path="/srv/plone/pp2-buildout/zinstance/src/psj.content/etc/sample-ddc-sach.csv" name="psj.content.DDCSach" />
    </configure>

    <configure xmlns="http://namespaces.zope.org/zope"
               xmlns:psj="http://namespaces.zope.org/psj">
      <psj:external-vocab path="/srv/plone/pp2-buildout/zinstance/src/psj.content/etc/sample-ddc-geo.csv" name="psj.content.DDCGeo" />
    </configure>

    <configure xmlns="http://namespaces.zope.org/zope"
               xmlns:psj="http://namespaces.zope.org/psj">
      <psj:external-vocab path="/srv/plone/pp2-buildout/zinstance/src/psj.content/etc/sample-gnd-ids.csv" name="psj.content.GNDIds" />
    </configure>

</configure>
